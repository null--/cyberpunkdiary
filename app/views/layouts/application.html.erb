<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title><%= @page_title || '[CPD]' %></title>
        <%= stylesheet_link_tag "style" %>
    </head>
    <body>
      <header>
        <div class = "nav ph-dot-nav">
          <a href="/">Index</a>
          <% if User.is_authorized session then %>
             <a href="/articles/new">New</a>
          <% end %>
          <a href=<%=articles_path%>>Diary</a>
          <a href=<%=tags_path%>>Tags</a>
          <a href=<%=articles_path%>>About</a>
          <div class="effect"></div>
        </div>
        <profile>
          <% if User.is_authorized session then %>
            <%= link_to "Logout (" + (User.get_current_user session).nickname + ")", "/users/logout", :confirm => 'Are you sure?', :method => :logout %>
          <% else %>
            <a href="/users/login"> Login </a>
            <a href="/users/register"> Register </a>
          <% end %>
        </profile>
      </header>
      <flash><%= flash[:notice] %></flash>
      <% if flash[:error] then %>
        <flash><error><%= flash[:error] %></error></flash>
      <% end %>
        <%= "<h1>#{@page_title}</h1>" if @page_title %>
        <%= yield %>
    </body>
</html>

