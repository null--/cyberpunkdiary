<div class="meta">
  <span class="admin"> <%= link_to h(@article.user.nickname), (user_path @article.user) %></span>
  <span class="date">Created: <%= @article.created_at.strftime("%d/%m/%y %H:%M") %></span>
  <% if @article.created_at != @article.updated_at then %>
    <span class="date">Updated: <%= @article.updated_at.strftime("%d/%m/%y %H:%M") %></span>
  <% end %>
  <span class="tag">
	<% @article.tags.each do |tag| %>
	<%= link_to tag.name + " ", tag_path(tag) %>
	<% end %>
  </span>
  <span class="comment">comments:<%= @article.comments.size %></span>
</div>
