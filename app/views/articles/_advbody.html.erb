<%#= stylesheet_link_tag "style_oww" %>

<!-- 
	 Include the WYSIWYG javascript files
  -->
<%= javascript_include_tag "wysiwyg" %>
<%= javascript_include_tag "wysiwyg-settings" %>
<!-- 
	 Attach the editor on the textareas
  -->
<script type="text/javascript">
  // Use it to attach the editor to all textareas with full featured setup
  //WYSIWYG.attach('all', full);
  
  // Use it to attach the editor directly to a defined textarea
  WYSIWYG.attach('article_body'); // default setup
  
  // Use it to display an iframes instead of a textareas
  //WYSIWYG.display('all', full);  
</script>

<textarea id="article_body" name="article[body]" style="width:48em;height:20em">
  <%= @article.body || "Write your story here." %>
</textarea>
