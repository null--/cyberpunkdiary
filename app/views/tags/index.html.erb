<h1>Tags</h1>
<div class="meta">
<% @tags.sort_by{|e| e.name}.each do |tag| %>
<span class="tag" style="font-size:<%= ((CPDConf.max_font_size - CPDConf.min_font_size).to_f*(tag.articles.count.to_f/@total_art.to_f) + CPDConf.min_font_size).to_s%>px"> <%= link_to h(tag.name + ": " + tag.articles.count.to_s ), tag_path(tag) %> </span>
<% end %>
</div>

